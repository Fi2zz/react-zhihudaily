* {
  word-wrap: break-word;
  word-break: break-all;
}

//no more support below IE 11
@font-face {
  font-family: 'iconfont';
  src: url('fonts/iconfont.woff') format('woff'),
    url('fonts/iconfont.ttf') format('truetype'),
    url('fonts/iconfont.svg#iconfont') format('svg');
}

.icon {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-arrow-left:before {
  content: "\e697";
}

.icon-comment:before {
  content: "\e69b";
}

.icon-arrow-down:before {
  content: "\e6a6";
}

.icon-like:before {
  content: "\e717";
}

.icon-share:before {
  content: "\e71d";
}

img
  display: block
  max-width 100%

a
  text-decoration: none

html, body
  width: 100%
  height: 100%

body
  margin auto !important
  background #222 !important
  #root
    max-width 420px
    background #fff
    min-height 100%
    padding-bottom: 44px
    margin: auto

@import "./story-list.styl"
@import "./story.styl"
@import "./story-action.styl"
@import "./comment.styl"
