.story-swiper
  height 240px
  position: relative;
  z-index: 7;
  .swiper-slide
    height: 240px
  .swiper-pagination-bullet-active
    background-color #fff
  .swiper-item-heading
    position: absolute
    bottom: 0
    left: 0
    right: 0
    top: 0
    background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, .8), rgba(0, 0, 0, .1))
    .text
      color #fff
      font-weight: normal
      line-height 1.6
      margin: 0
      font-size: 18px
      position: absolute
      bottom: 20px
      right: 0
      left: 0
      padding: 16px




.story-list
  .list-group
    list-style-type: none
    padding-left: 0
    width: 100%
    flex 1
    margin: 0
  .list-group-item
    display: flex
    flex 1
    border-bottom 1px #ddd solid
    justify-content flex-start
    align-items flex-start
    height: 64px
    padding-top: 16px
    padding-bottom: 16px
    &-title
      font-size: 16px
      font-weight: normal
      display: flex
      flex .7
      margin: 0
      padding-top: 0
      padding-bottom: 0
      padding-left: 16px
      line-height 1.5
      height: 100%
      padding-right: 16px
    &-cover
      width: 100%
      height: 100%
      display: block
      position relative
      span 
       position absolute 
       bottom 0
       right 0
       padding 2px 4px
       font-size: 12px
       color #fff
       background-color: rgba(0,0,0,.4) 
    &-image
      display: flex
      flex .3
      align-items center
      justify-content center
      height: 100%
      padding-right: 16px
      img
        width: 100%
        display: block
        height: 100%
        border: none
  .list-group-item-header
    z-index: 9
    height: 44px
    max-width 420px
    margin auto
    line-height 44px
    background: none
    color #fff
    text-align: center
    font-size: 16px
    transition all ease 300ms
    background $brand-primary

.loading
  text-align: center
  padding: 12px
  font-size: 14px
